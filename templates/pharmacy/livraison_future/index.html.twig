{% extends 'base.html.twig' %}

{% block title %}Rendez-vous
{% endblock %}

{% block body %}
<style>
    .swal2-actions{
        width:100% !important;
        padding: 0 15px;
    }
</style>
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="container-xl p-0 pt-3 pb-1" style="padding-right: 9px !important;">
					<div class="row g-2 align-items-center">
						<div class="col">
							<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
								<li class="breadcrumb-item active">
									<a href="#">Livraison</a>
								</li>
								<li class="breadcrumb-item">
									<a href="{{path('app_pharmacy_livraison_future')}}">Future Commandes</a>
								</li>
							</ol>
						</div>
						<div class="col-auto ms-auto d-print-none">
							<div class="btn-list">
								{% include 'inc/actions.html.twig' %}
							</div>
						</div>
					</div>
				</div>
				<div class="row">
                    <div class="col-md-2">
						<div class="form-check form-check-inline px-2 ml-2">
							<input class="form-control scanInput" type="text" name="scanInput" id="scanInput" placeholder="Scan Code Barre">
						</div>
					</div>
                    <div class="col-md-2 m-1 mt-3 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterAujourdhui" value="today" checked>
							<label class="form-check-label" for="filterAujourdhui">Aujourd'hui</label>
						</div>
					</div>
					<div class="col-md-2 m-1 mt-3 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterDemain" value="tomorrow">
							<label class="form-check-label" for="filterDemain">Demain</label>
						</div>
					</div>
					<div class="col-md-2 m-1 mt-3 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio filterDate" type="radio" name="filterDate" id="filterTous" value="all">
							<label class="form-check-label" for="filterTous">Tous</label>
						</div>
					</div>
				</div>
				<div class="table-responsive">
					<table id="list_Livraison_future" class="table custom-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th width="3%"><input type="checkbox" class="selectAllLivraisons"></th>
								<th width="5%">Demande</th>
								<th width="10%">Date</th>
								<th width="5%">Livraison</th>
								<th width="10%">Date</th>
								<th width="10%">Patient</th>
								<th width="10%">Dossier</th>
								<th width="10%">Statut</th>
								<th width="10%">Pr√©vue le</th>
								<th width="1%"></th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	{# {% include 'pharmacy/livraison_cree/modals/rdv_new.html.twig' %} #}
	{% include 'pharmacy/livraison_future/modals/details.html.twig' %}
	{% include 'pharmacy/livraison_future/modals/observation.html.twig' %}
{% endblock %}
{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('pharmacy_liv_future') }}
