{% block title %}Rendez-vous
{% endblock %}

{% block body %}
<style>
    .swal2-actions{
        width:100% !important;
        padding: 0 15px;
    }
</style>
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="container-xl p-0 pt-3 pb-1" style="padding-right: 9px !important;">
					<div class="row g-2 align-items-center">
						<div class="col">
							<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
								<li class="breadcrumb-item active">
									<a href="#">Livraison</a>
								</li>
								<li class="breadcrumb-item">
									<a href="{{path('app_pharmacy_brd')}}">Bordereaux</a>
								</li>
							</ol>
						</div>
						<div class="col-auto ms-auto d-print-none">
							<div class="btn-list">
								{% include 'inc/actions.html.twig' %}
							</div>
						</div>
					</div>
				</div>
				<div class="row">
                    <div class="col">
						<div class="form-check form-check-inline px-2 ml-2">
							<input class="form-control scanInput" type="text" name="scanInput" id="scanInput" placeholder="Scan Code Barre">
						</div>
					</div>
				</div>
				<div class="table-responsive">
					<table id="list_brd" class="table custom-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th width="3%">#</th>
								<th width="5%">Code</th>
								<th width="10%">Date</th>
								<th width="5%">Nbr Livraisons</th>
								<th width="5%">Observation</th>
								{# <th width="1%"></th> #}
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
