<table class="" style="width: 100% ; margin-top:6px" cellspacing="0">
    <thead>
        <tr style="background-color: #C9CCD5; color:black; font-size: 6px;">
            <th style="width: 5%;padding: 1px;font-size: 9px;">#</th>
            <th style="width: 20%;padding: 1px;font-size: 9px;">CODE</th>
            <th style="width: 40%;padding: 1px;font-size: 9px;">ARTICLE</th>
            <th style="width: 10%;padding: 1px;padding-right: 3px;text-align: center;font-size: 9px;">qte livré</th>
            <th style="width: 2%;padding: 1px;text-align: center; border:none; background-color: #fff"></th>
            <th style="width: 10%;padding: 1px;text-align: center;font-size: 9px;">qte demandé</th>
            <th style="width: 10%;padding: 1px;text-align: center;font-size: 9px;">total livraison</th>
            <th style="width: 10%;padding: 1px;text-align: center;font-size: 9px;">reste</th>
        </tr>
    </thead>
    <tbody>
        {% set prixTotHT = 0 %}
        {% set prixTotNet = 0 %}
        {% set TotTva = 0 %}
        {% set baseTVA = 0 %}
        {% for key , article in articles  %}
            {% set  key = key + 1  %}
            <tr>
                <td style="width: 5%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: center;">{{key}}</td>
                <td style="width: 10%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: center;">{{ article.code|upper }}</td>
                <td style="width: 40%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: left;">{{ article.designation|upper }}</td>
                <td style="width: 5%;text-transform:uppercase;padding: 3px;font-size: 11px;text-align: center;font-weight:bold;">{{ article.qteLivre}}</td>
                <td style="width: 2%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: center;"></td>
                <td style="width: 2%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: center;font-style: italic;">{{ article.qteDemande}}</td>
                <td style="width: 5%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: center;font-style: italic;">{{ article.totalLivraison}}</td>
                <td style="width: 5%;text-transform:uppercase;padding: 3px;font-size: 9px;text-align: center;font-style: italic;">{{ article.reste}}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
