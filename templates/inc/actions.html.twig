<style>
	/* Remove default button styles and adjust cursor */

	.btn_menu {
		border: none;
		background-color: transparent;
		padding: 0;
		cursor: pointer;
	}

</style>

<div class="py-4 align-items-center" style="text-align:right !important">
	<div class="dropdown" style="">
        <svg class="icon" fill="black" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <circle cx="12" cy="5" r="2"></circle>
            <circle cx="12" cy="12" r="2"></circle>
            <circle cx="12" cy="19" r="2"></circle>
        </svg>

        <div class="actions dropdown-menu dashboard-dropdown dropdown-menu-center mt-2 py-1">
            {% for operation in operations %}
                {% if operation.align is null %}
                    <a href="{{operation.link}}" class="dropdown-item {{operation.classTag}}" id="{{operation.idTag}}" style="font-size: 10px !important;">
                        <i class="{{operation.icon}}"></i>&nbsp;
                        {{operation.designation}}</a>
                {% endif %}
            {% endfor %}
        </div>
	</div>
</div>
