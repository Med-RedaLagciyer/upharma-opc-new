<header class="navbar navbar-expand-md d-none d-lg-flex d-print-none">
	<div class="container-xl">
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="navbar-nav flex-row order-md-last">
			<div class="nav-item dropdown">
				<a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">


					{% if is_granted('ROLE_ADMIN') %}
						{% set firstLetter = app.user.username|slice(0, 1) %}
						<span class="avatar avatar-sm" style="background-color: #182433; color: #fff; display: inline-flex; align-items: center; justify-content: center; border-radius: 15%; width: 30px; height: 30px;">
							{{ firstLetter|upper }}
						</span>
						<div class="d-none d-xl-block ps-2">
							<div>{{ app.user.username }}</div>
							<div class="mt-1 small text-secondary">
								Admin
							</div>
						</div>
					{% elseif is_granted('ROLE_ETUDIANT') %}
						{% set firstLetter = app.user.nom|slice(0, 1) %}
						{% set secondLetter = app.user.prenom|slice(0, 1) %}
						<span class="avatar avatar-sm" style="background-color: #182433; color: #fff; display: inline-flex; align-items: center; justify-content: center; border-radius: 15%; width: 30px; height: 30px;">
							{{ firstLetter|upper }}{{ secondLetter|upper }}
						</span>
						<div class="d-none d-xl-block ps-2">
							<div>{{ app.user.username }}</div>
							<div class="mt-1 small text-secondary">
								{{app.user.nom}}
								{{app.user.prenom}}
							</div>
						</div>
					{% else %}
						{% set firstLetter = app.user.username|slice(0, 1) %}
						<span class="avatar avatar-sm" style="background-color: #182433; color: #fff; display: inline-flex; align-items: center; justify-content: center; border-radius: 15%; width: 30px; height: 30px;">
							{{ firstLetter|upper }}
						</span>
						<div class="d-none d-xl-block ps-2">
							<div>{{ app.user.username }}</div>
							<div class="mt-1 small text-secondary">
								User
							</div>
						</div>
					{% endif %}


				</a>
				<div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
					<button id="password-change" data-id="{{app.user.id}}" class="dropdown-item">Réinitialisation du mot de passe</button>
					<hr style="margin: 2px 6px;">
					<a href="{{path('app_logout')}}" class="dropdown-item">Se déconnecter</a>
				</div>
			</div>
		</div>
		<div class="collapse navbar-collapse" id="navbar-menu">
			<div></div>
		</div>
	</div>
</header>
