{% extends 'base.html.twig' %}

{% block title %}Rendez-vous
{% endblock %}

{% block body %}
<style>
    .swal2-actions{
        width:100% !important;
        padding: 0 15px;
    }
</style>
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="container-xl p-0 pt-3 pb-1" style="padding-right: 9px !important;">
					<div class="row g-2 align-items-center">
						<div class="col">
							<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
								<li class="breadcrumb-item active">
									<a href="#">Paramétrage</a>
								</li>
								<li class="breadcrumb-item">
									<a href="{{path('app_admin_parametrage_positions')}}">Positions</a>
								</li>
							</ol>
						</div>
						<div class="col-auto ms-auto d-print-none">
							<div class="btn-list">
								{% include 'inc/actions.html.twig' %}
							</div>
						</div>
					</div>
				</div>
				<div class="table-responsive">
                    <table id="list_positions" class="table custom-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th width="3%"><input type="checkbox" class="selectAllLivraisons"></th>
								<th width="5%">Position</th>
								<th width="10%">Réservée</th>
								<th width="5%">Vip</th>
								<th width="5%">NBR LIVRAISONS</th>
								<th width="1%"></th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('admin_positions') }}
{% endblock %}
