{% extends 'base.html.twig' %}

{% block title %}Rendez-vous
{% endblock %}

{% block body %}


	<style>
		.select2-container--default .select2-results {
			z-index: 1050 !important;

		}
		.select2-container--default .select2-selection--single {
			height: 34.8px;
		}

		.select2-container--default .select2-selection--single {
			width: 100% !important; /* Ensure the selection box is 100% width */
		}

		#tablesActes td {
			padding: 5px;
		}
	</style>


	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="container-xl p-0 pt-3 pb-1" style="padding-right: 9px !important;">
					<div class="row g-2 align-items-center">
						<div class="col">
							<ol class="breadcrumb breadcrumb-arrows" aria-label="breadcrumbs">
								<li class="breadcrumb-item active">
									<a href="#">Rendez-vous</a>
								</li>
								<li class="breadcrumb-item">
									<a href="{{path('app_etudiant_rdv_listing')}}">Listing</a>
								</li>
							</ol>
						</div>
						<div class="col-auto ms-auto d-print-none">
							<div class="btn-list">
								<button class="btn btn-primary ajouterRdv" style="padding: 6px 8px;">
									<i class="fa-solid fa-plus"></i>
								</button>
							</div>
						</div>
					</div>
				</div>
				<div class="row col-md-4">
					<div class="col-md-3 m-3 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterAujourdhui" value="today" checked>
							<label class="form-check-label" for="filterAujourdhui">Aujourd'hui</label>
						</div>
					</div>
					{# <div class="col-md-2 m-2 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterHier" value="yesterday">
							<label class="form-check-label" for="filterHier">Hier</label>
						</div>
					</div> #}
					<div class="col-md-2 m-2 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio" type="radio" name="filterDate" id="filterDemain" value="tomorrow">
							<label class="form-check-label" for="filterDemain">Demain</label>
						</div>
					</div>
					<div class="col-md-2 m-2 mt-4 mb-0">
						<div class="form-check form-check-inline">
							<input class="form-check-input filter-radio filterDate" type="radio" name="filterDate" id="filterTous" value="all">
							<label class="form-check-label" for="filterTous">Tous</label>
						</div>
					</div>
				</div>
				<div class="table-responsive">
					<table id="list_rendezvous" class="table custom-striped table-bordered" style="width:100%">
						<thead>
							<tr>
								<th width="3%">#</th>
								<th width="15%">Code</th>
								<th width="10%">Nom</th>
								<th width="10%">Prenom</th>
								<th width="10%">CIN</th>
								<th width="10%">IPP</th>
								<th width="10%">TEL</th>
								<th>Act</th>
								<th width="10%">Date</th>
								<th width="10%">Date creation</th>
								<th width="5%">STATUT DE RDV</th>
								<th width="1%"></th>
							</tr>
						</thead>
						<tbody></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	{% include 'etudiant/rdv/modals/rdv_new.html.twig' %}
	{% include 'etudiant/rdv/modals/details.html.twig' %}
{% endblock %}
{% block javascripts %}
	{{parent()}}
	{{ encore_entry_script_tags('etudiant_rdv') }}
{% endblock %}
